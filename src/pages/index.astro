---
import BaseLayout from "../layouts/BaseLayout.astro";
import TypeWritter from "../components/TypeWritter";
const pageTitle = "Home Page";
---

<BaseLayout pageTitle={pageTitle}>
  <main>
    <div class="flex justify-center items-center text-2xl p-8">
      <h2 class="inline">
        Hello <span
          class="relative bottom-1 right-1 text-3xl inline-block animate-wiggle"
          >ðŸ‘‹</span
        >, I'm <i>Alexandru Visan</i> and I'm
        <TypeWritter
          client:load
          sentences={[
            "from Romania",
            "a frontend developer",
            "a software engineer",
            "a tech enthusiast",
            "open for new ideas",
          ]}
          options={{ writeSpeed: 50, deleteSpeed: 50, pauseSpeed: 1000 }}
        />
      </h2>
    </div>
  </main>
</BaseLayout>
