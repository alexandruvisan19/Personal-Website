---
import BaseLayout from '../layouts/BaseLayout.astro';
import TypeWritter from '../components/TypeWritter';
import Modal from '../components/Modal';

const pageTitle = 'Home Page';

import { person, social } from '../data';
const { linkedin, github } = social;
const { name } = person;
---

<BaseLayout pageTitle={pageTitle}>
  <div
    class='md:w-max absolute top-1/2 right-1/2 translate-x-[50%] translate-y-[-50%] w-11/12 text-center'
  >
    <h2 class='inline text-4xl font-bold'>
      Hey there! <span
        class='relative bottom-1 right-1 text-5xl inline-block animate-wave origin-[70%_70%]'
        >ðŸ‘‹</span
      >, I'm {name.firstname} and I'm
      <span>
        <TypeWritter
          client:load
          sentences={[
            'from Romania.',
            'a frontend developer.',
            'a software engineer.',
            'a tech enthusiast.',
            'open for new ideas.',
          ]}
          options={{
            writeSpeed: 50,
            deleteSpeed: 50,
            pauseSpeed: 1300,
            caretSpeed: 500,
            isInfinite: false,
            startText: false,
          }}
        /></span
      >
    </h2>
    <button
      id='contactBtn'
      class='btn btn-info mt-6 bg-heroPattern drop-shadow-xl hover:bg-slate-50'
      >Contact me</button
    >
    <div class='flex justify-center mt-6'>
      <a href={linkedin.link}
        ><span class='i-mdi-linkedin text-4xl ml-2 mr-2'
        ></span></a
      >
      <a href={github.link}
        ><span class='i-mdi-github text-4xl ml-2 mr-2'></span></a
      >
    </div>
  </div>
  <Modal client:load>
    <h3 class='font-bold text-4xl mb-4'>Contact me</h3>
    <p class='py-4 text-xl mb-4'>
      Interested in a conversation? I'll reply as fast as I can ðŸ‘Œ
    </p>
  </Modal>

  <script is:inline>
    document
      .getElementById('contactBtn')
      ?.addEventListener('click', () => {
        window?.document.getElementById('my_modal_1')?.showModal();
      });
  </script>
</BaseLayout>
